<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeGenerator.PageSettings">

    <Shell.TitleView>
        <Label x:Name="lblTitle"
               Style="{StaticResource labelStyleShellTitleView}"
               HorizontalOptions="Start"
               Text="Settings" />
    </Shell.TitleView>

    <ScrollView>
        <StackLayout>
            <Grid RowDefinitions="40, 40, 40, 10, 40, 40, 40, 10, 40, 40, 40, 40, 10, 40"
                  ColumnDefinitions="150, 200*"
                  Margin="10,10,10,0"
                  ColumnSpacing="8"
                  RowSpacing="8">

                <Label
                    x:Name="lblLanguage"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Language:" />

                <Border Style="{StaticResource borderStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    VerticalOptions="Center">

                    <Picker x:Name="pckLanguage"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        MinimumWidthRequest="190"
                        VerticalTextAlignment="Center"
                        SelectedIndexChanged="OnPickerLanguageChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Deutsch</x:String>
                                <x:String>English</x:String>
                                <x:String>Español</x:String>
                                <x:String>Français</x:String>
                                <x:String>Italiano</x:String>
                                <x:String>Nederlands</x:String>
                                <x:String>Português</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label x:Name="lblTheme"
                       Grid.Row="1"
                       Grid.Column="0"
                       VerticalTextAlignment="Center"
                       Text="Theme:" />

                <Border Style="{StaticResource borderStyleDefault}"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    VerticalOptions="Center">

                    <Picker x:Name="pckTheme"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        MinimumWidthRequest="190"
                        VerticalTextAlignment="Center"
                        SelectedIndexChanged="OnPickerThemeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>System</x:String>
                                <x:String>Light</x:String>
                                <x:String>Dark</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label
                    x:Name="lblDefaultFormat"
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Default format:" />

                <Border Style="{StaticResource borderStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    VerticalOptions="Center">

                    <Picker
                    x:Name="pckFormatCode"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    MinimumWidthRequest="190"
                    VerticalTextAlignment="Center"
                    SelectedIndexChanged="OnPickerFormatCodeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Aztec</x:String>
                                <x:String>Codabar</x:String>
                                <x:String>Code 128</x:String>
                                <x:String>Code 39</x:String>
                                <x:String>Code 93</x:String>
                                <x:String>Data Matrix</x:String>
                                <x:String>EAN-13</x:String>
                                <x:String>EAN-8</x:String>
                                <x:String>IMb (Intelligent Mail)</x:String>
                                <x:String>ITF (Interleaved 2 of 5)</x:String>
                                <x:String>MSI (Modified Plessey)</x:String>
                                <x:String>PDF417</x:String>
                                <x:String>Pharmacode</x:String>
                                <x:String>Plessey</x:String>
                                <x:String>QR Code</x:String>
                                <x:String>RSS 14</x:String>
                                <x:String>RSS Expanded</x:String>
                                <x:String>UPC-A</x:String>
                                <x:String>UPC-E</x:String>
                                <x:String>UPC EAN Extension</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label
                    x:Name="lblBarcodeColor"
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Start"
                    Text="Barcode color:" />
             
                <Slider
                    x:Name="sldColorFgRed"
                    Grid.Row="4"
                    Grid.Column="1"
                    ThumbColor="#FF0000"
                    MinimumTrackColor="#FF0000"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorForgroundValueChanged" />

                <BoxView
                    x:Name="bxvColorFg"
                    Grid.Row="5"
                    Grid.Column="0"
                    Color="Black" />

                <Slider
                    x:Name="sldColorFgGreen"
                    Grid.Row="5"
                    Grid.Column="1"
                    ThumbColor="#00FF00"
                    MinimumTrackColor="#00FF00"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorForgroundValueChanged" />

                <Slider
                    x:Name="sldColorFgBlue"
                    Grid.Row="6"
                    Grid.Column="1"
                    ThumbColor="#0000FF"
                    MinimumTrackColor="#0000FF"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorForgroundValueChanged" />

                <Label
                    x:Name="lblBackgroundColor"
                    Grid.Row="8"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Start"
                    Text="Background color:" />

                <Slider
                    x:Name="sldColorBgRed"
                    Grid.Row="8"
                    Grid.Column="1"
                    ThumbColor="#FF0000"
                    MinimumTrackColor="#FF0000"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorBackgroundValueChanged" />

                <BoxView
                    x:Name="bxvColorBg"
                    Grid.Row="9"
                    Grid.Column="0"
                    Color="White" />
                
                <Slider
                    x:Name="sldColorBgGreen"
                    Grid.Row="9"
                    Grid.Column="1"
                    ThumbColor="#00FF00"
                    MinimumTrackColor="#00FF00"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorBackgroundValueChanged" />

                <Slider
                    x:Name="sldColorBgBlue"
                    Grid.Row="10"
                    Grid.Column="1"
                    ThumbColor="#0000FF"
                    MinimumTrackColor="#0000FF"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorBackgroundValueChanged" />

                <Label
                    x:Name="lblBackgroundOpacity"
                    Grid.Row="11"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Start"
                    Text="Background opacity:" />

                <Slider
                    x:Name="sldOpacityBg"
                    Grid.Row="11"
                    Grid.Column="1"
                    ThumbColor="Grey"
                    MinimumTrackColor="Black"
                    Minimum="0"
                    Maximum="255"
                    ValueChanged="OnSliderColorBackgroundValueChanged" />

                <Button x:Name="btnSettingsSave"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="13"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Text="Save"
                    Clicked="OnSettingsSaveClicked" />

                <Button x:Name="btnSettingsReset"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="13"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="Reset"
                    Clicked="OnSettingsResetClicked" />

            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>