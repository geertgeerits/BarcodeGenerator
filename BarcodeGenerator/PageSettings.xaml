<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeGenerator.PageSettings">

    <Shell.TitleView>
        <Label x:Name="lblTitle"
               Style="{StaticResource labelStyleShellTitleView}"
               HorizontalOptions="Start"
               Text="Settings" />
    </Shell.TitleView>

    <ScrollView>
        <StackLayout>
            <Grid RowDefinitions="36, 36, 36"
                  ColumnDefinitions="160, 200, 50*"
                  ColumnSpacing="10"
                  RowSpacing="10">

                <Label x:Name="lblTheme"
                       Style="{StaticResource labelStyleDefault}"
                       Grid.Row="0"
                       Grid.Column="0"
                       Text="Theme" />

                <RadioButton x:Name="rbnThemeSystem"
                             Grid.Row="0"
                             Grid.Column="1"
                             GroupName="rbgThemes"
                             Value="rbnThemeSystem"
                             Content="System"
                             CheckedChanged="OnThemesRadioButtonCheckedChanged" />

                <RadioButton x:Name="rbnThemeLight"
                             Grid.Row="1"
                             Grid.Column="1"
                             GroupName="rbgThemes"
                             Value="rbnThemeLight"
                             Content="Light"
                             CheckedChanged="OnThemesRadioButtonCheckedChanged" />

                <RadioButton x:Name="rbnThemeDark"
                             Grid.Row="2"
                             Grid.Column="1"
                             GroupName="rbgThemes"
                             Value="rbnThemeDark"
                             Content="Dark"
                             CheckedChanged="OnThemesRadioButtonCheckedChanged" />
            </Grid>

            <Label></Label>

            <Grid RowDefinitions="40, 40, 40, 6, 40"
                  ColumnDefinitions="160, 200, 50*"
                  ColumnSpacing="10"
                  RowSpacing="10">

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    VerticalTextAlignment="Start"
                    Text="Select a format:" />

                <Border Style="{StaticResource borderStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    VerticalOptions="End">

                    <Picker
                    x:Name="PckFormatCode"
                    Grid.Row="0"
                    Grid.Column="1"
                    HeightRequest="37"
                    WidthRequest="200"
                    SelectedIndexChanged="OnPickerFormatCodeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Aztec</x:String>
                                <x:String>Codabar</x:String>
                                <x:String>Code 128</x:String>
                                <x:String>Code 39</x:String>
                                <x:String>Code 93</x:String>
                                <x:String>Data Matrix</x:String>
                                <x:String>EAN-13</x:String>
                                <x:String>EAN-8</x:String>
                                <x:String>IMb (Intelligent Mail)</x:String>
                                <x:String>ITF (Interleaved 2 of 5)</x:String>
                                <x:String>MSI (Modified Plessey)</x:String>
                                <x:String>PDF417</x:String>
                                <x:String>Pharmacode</x:String>
                                <x:String>Plessey</x:String>
                                <x:String>QR Code</x:String>
                                <x:String>RSS 14</x:String>
                                <x:String>RSS Expanded</x:String>
                                <x:String>UPC-A</x:String>
                                <x:String>UPC-E</x:String>
                                <x:String>UPC EAN Extension</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Button x:Name="btnSettingsSave"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Save"
                    Clicked="OnSettingsSaveClicked" />

                <Button x:Name="btnSettingsClear"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="Clear"
                    Clicked="OnSettingsClearClicked" />

            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>