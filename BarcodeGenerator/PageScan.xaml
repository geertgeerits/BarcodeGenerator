<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="BarcodeGenerator.PageScan"
             Appearing="OnPageAppearing">

    <NavigationPage.TitleView>
        <Grid RowDefinitions="50"
              ColumnDefinitions="200*, 60, 60"
              Margin="5"
              BackgroundColor="#00bfff">

            <Label
                x:Name="lblTitle"
                Style="{StaticResource labelStyleShellTitleView}"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Text="Barcode Scanner">
            </Label>

            <ImageButton
                Grid.Row="0"
                Grid.Column="2"
                Source="torch_icon_64p.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="36"
                WidthRequest="36"
                BackgroundColor="#00bfff"
                BorderColor="#00bfff"
                Clicked="OnTorchClicked">
            </ImageButton>
        </Grid>
    </NavigationPage.TitleView>

    <ScrollView>
        <Grid RowDefinitions="40, 10, 520, 10, 40, 100*"
              ColumnDefinitions="140, 210*"
              Margin="10,10,10,10"
              ColumnSpacing="0"
              RowSpacing="2"
              x:Name="grdScanner">

            <Label
                x:Name="lblFormatCode"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Text="Select a format:" />

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="Start"
                VerticalOptions="Center">

                <Picker
                    x:Name="pckFormatCodeScanner"
                    Grid.Row="0"
                    Grid.Column="1"
                    MinimumWidthRequest="200"
                    SelectedIndexChanged="OnPickerFormatCodeChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Barcode 1</x:String>
                            <x:String>Barcode 2</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Border>

            <zxing:CameraBarcodeReaderView
                x:Name="barcodeReader"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="400"
                WidthRequest="300"
                IsDetecting="True"
                IsTorchOn="False"
                BarcodesDetected="OnBarcodesDetected" />

            <Button
                x:Name="btnShare"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalOptions="Start"
                VerticalOptions="End"
                HeightRequest="40"
                MinimumWidthRequest="130"
                Text="Share"
                IsEnabled="False"
                Clicked="OnShareClicked" />

            <HorizontalStackLayout
                Grid.Row="4"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,10,2,0"
                Spacing="10">

                <Label
                    x:Name="lblTextToSpeech"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    HorizontalTextAlignment="End"
                    VerticalTextAlignment="End"
                    Text="en-US" />

                <ImageButton
                    x:Name="imgbtnTextToSpeech"
                    Source="speaker_64p.png"
                    HeightRequest="38"
                    WidthRequest="38"
                    BackgroundColor="#00bfff"
                    BorderColor="Gray"
                    Clicked="OnTextToSpeechClicked">
                </ImageButton>

                <!--<ImageButton
                    x:Name="imgbtnTextToSpeechCancel"
                    Source="speaker_cancel_64p.png"
                    HeightRequest="32"
                    WidthRequest="32"
                    BackgroundColor="#00bfff"
                    BorderColor="Gray"
                    Clicked="OnTextToSpeechCancelClicked">
                </ImageButton>-->
            </HorizontalStackLayout>

            <!--<Button
                x:Name="btnTextToSpeech"
                Grid.Row="4"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="End"
                HeightRequest="40"
                MinimumWidthRequest="130"
                Text="Listen"
                IsEnabled="False"
                Clicked="OnTextToSpeechClicked" />-->

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}">

                <Label
                    x:Name="lblBarcodeResult"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Padding="10"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="" />
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
    