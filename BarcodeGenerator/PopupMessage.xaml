<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/maui/global"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="BarcodeGenerator.PopupMessage"
    BackgroundColor="#80000000"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Loaded="Popup_Loaded">
    
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}"
        Padding="20"
        WidthRequest="250">
        
        <Label
            x:Name="lblPopupMessage"
            HorizontalOptions="Center"
            BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}"
            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}">
        </Label>

        <Button
            x:Name="btnButtonClose"
            HorizontalOptions="End"
            VerticalOptions="End"
            BackgroundColor="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}"
            TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
            Text="{Translate ButtonNext_Text}"
            Clicked="OnButtonClose_Clicked">
        </Button>
    </VerticalStackLayout>
</toolkit:Popup>
