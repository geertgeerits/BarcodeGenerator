<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="BarcodeGenerator.MainPage"
             Loaded="OnLoad">

    <Shell.TitleView>
        <Grid RowDefinitions="40"
              ColumnDefinitions="40, 160, 110*, 40"
              Margin="5"
              BackgroundColor="#00bfff">

            <ImageButton
                Grid.Row="0"
                Grid.Column="0"
                Source="info_32p.png"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                HeightRequest="28"
                WidthRequest="28"
                BackgroundColor="#00bfff"
                BorderColor="#00bfff"
                Clicked="OnPageAboutClicked">
            </ImageButton>

            <Label
                x:Name="lblTitle"
                Style="{StaticResource labelStyleShellTitleView}"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0"
                HorizontalTextAlignment="Start"
                FontSize="17"
                Text="Barcode Generator">
            </Label>

            <ImageButton
                Grid.Row="0"
                Grid.Column="2"
                Source="scan_barcode_icon_128p.png"
                HorizontalOptions="End"
                VerticalOptions="Center"
                HeightRequest="30"
                WidthRequest="30"
                BackgroundColor="#00bfff"
                BorderColor="#00bfff"
                Clicked="OnPageScanClicked">
            </ImageButton>

            <ImageButton
                Grid.Row="0"
                Grid.Column="3"
                Source="settings_32p.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="24"
                WidthRequest="24"
                BackgroundColor="#00bfff"
                BorderColor="#00bfff"
                Clicked="OnPageSettingsClicked">
            </ImageButton>

            <!--<ImageButton
                Grid.Row="0"
                Grid.Column="3"
                Source="cancel_close_icon_48p.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="24"
                WidthRequest="24"
                BackgroundColor="#00bfff"
                BorderColor="#00bfff"
                Clicked="OnCloseApplicationClicked">
            </ImageButton>-->

        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <Grid RowDefinitions="40, 40, 180, 46, 250, 40, 46"
              ColumnDefinitions="140, 210*"
              Margin="10,10,10,0"
              ColumnSpacing="0"
              RowSpacing="2">

            <Label
                x:Name="lblFormatCode"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Text="Select a format:" />

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="Start"
                VerticalOptions="Center">

                <Picker
                    x:Name="pckFormatCode"
                    Grid.Row="0"
                    Grid.Column="1"
                    MinimumWidthRequest="200"
                    SelectedIndexChanged="OnPickerFormatCodeChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Aztec</x:String>
                            <x:String>Codabar</x:String>
                            <x:String>Code 128</x:String>
                            <x:String>Code 39</x:String>
                            <x:String>Code 93</x:String>
                            <x:String>Data Matrix</x:String>
                            <x:String>EAN-13</x:String>
                            <x:String>EAN-8</x:String>
                            <x:String>IMb (Intelligent Mail)</x:String>
                            <x:String>ITF (Interleaved 2 of 5)</x:String>
                            <x:String>MaxiCode</x:String>
                            <x:String>MSI (Modified Plessey)</x:String>
                            <x:String>PDF417</x:String>
                            <x:String>Pharmacode</x:String>
                            <x:String>Plessey</x:String>
                            <x:String>QR Code</x:String>
                            <x:String>RSS 14</x:String>
                            <x:String>RSS Expanded</x:String>
                            <x:String>UPC-A</x:String>
                            <x:String>UPC-E</x:String>
                            <x:String>UPC EAN Extension</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Border>

            <Label
                x:Name="lblTextToEncode"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Text="Text to encode:" />

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start">

                <ScrollView 
                    Orientation="Vertical" VerticalScrollBarVisibility="Default">
                    
                    <Editor
                        x:Name="edtTextToCode"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="180"
                        MinimumWidthRequest="350"
                        VerticalTextAlignment="Start" />
                </ScrollView>
            </Border>

            <Button
                x:Name="btnGenerateCode"
                Style="{StaticResource buttonStyleDefault}"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Text="Generate"
                Clicked="OnGenerateCodeClicked" />

            <Button
                x:Name="btnClearCode"
                Style="{StaticResource buttonStyleDefault}"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Text="Clear"
                Clicked="OnClearCodeClicked" />

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                MaximumWidthRequest="700"
                HorizontalOptions="Fill"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}">

                <zxing:BarcodeGeneratorView
                    x:Name="bgvBarcode"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HeightRequest="250" />
            </Border>
            
            <Label
                x:Name="lblTextCode"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                LineBreakMode="TailTruncation" />

            <Button
                x:Name="btnShare"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                VerticalOptions="End"
                HeightRequest="40"
                MinimumWidthRequest="130"
                Text="Share"
                IsEnabled="False"
                Clicked="OnShareClicked" />

            <Image
                x:Name="imgScreenshot"
                Grid.Row="6"
                Grid.Column="1"
                IsVisible="false" />

        </Grid>
    </ScrollView>
</ContentPage>
