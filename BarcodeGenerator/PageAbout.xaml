<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeGenerator.PageAbout">

    <Shell.TitleView>
        <Label x:Name="lblTitle"
               Style="{StaticResource labelStyleShellTitleView}"
               HorizontalOptions="Start"
               Text="About" />
    </Shell.TitleView>

    <ScrollView>
        <StackLayout Margin="15" Spacing="4">
            <Label x:Name="lblNameProgram"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   Text="Barcode Generator"
                   FontSize="28"
                   FontAttributes="Bold" />

            <Label x:Name="lblDescription"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   Text="Generate various barcodes." />

            <Label x:Name="lblVersion"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   Text="Version: 1.0.17 Beta"/>

            <Label x:Name="lblCopyright"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   Text="Copyright Â© 2022-2022 Geert Geerits" />

            <HorizontalStackLayout Spacing="10">
                <Label x:Name="lblEmail"
                       VerticalOptions="Center" 
                       HorizontalOptions="Start"
                       Text="E-mail: geertgeerits@gmail.com"/>

                <ImageButton Source="circled_envelope_24p.png"                         
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             HeightRequest="24"
                             WidthRequest="24"
                             Clicked="OnbtnEmailLinkClicked">
                </ImageButton>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label x:Name="lblWebsite"
                       VerticalOptions="Center" 
                       HorizontalOptions="Start"
                       Text="Website: ../barcodegenerator"/>

                <ImageButton Source="internet_24p.png"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             HeightRequest="24"
                             WidthRequest="24"
                             Clicked="OnbtnWebsiteLinkClicked">
                </ImageButton>
            </HorizontalStackLayout>

            <Label></Label>

            <Label x:Name="lblLicense"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   FontSize="13"
                   Text="License: This application may be used freely for non-commercial purposes.
                         &#10; &#10;Use this program entirely at your own risk." />

            <Label></Label>

            <Label x:Name="lblPrivacyPolicy"
                   VerticalOptions="Center" 
                   HorizontalOptions="Start"
                   FontSize="13"
                   Text="Privacy Policy: No personal and other data is stored or passed on to myself and others." />

        </StackLayout>
    </ScrollView>
</ContentPage>